<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone OR ContentManagement OR ContentDelivery OR Processing OR Reporting">
    <heartbeatConfiguration>
      <exclude>
        <connectionStringName desc="solr.search">solr.search</connectionStringName>
        <connectionStringName desc="xconnect.collection">xconnect.collection</connectionStringName>
        <connectionStringName desc="xconnect.collection.certificate">xconnect.collection.certificate</connectionStringName>
        <connectionStringName desc="xdb.marketingautomation.operations.client">xdb.marketingautomation.operations.client</connectionStringName>
        <connectionStringName desc="xdb.marketingautomation.operations.client.certificate">xdb.marketingautomation.operations.client.certificate</connectionStringName>
        <connectionStringName desc="xdb.marketingautomation.reporting.client">xdb.marketingautomation.reporting.client</connectionStringName>
        <connectionStringName desc="xdb.marketingautomation.reporting.client.certificate">xdb.marketingautomation.reporting.client.certificate</connectionStringName>
        <connectionStringName desc="xdb.referencedata.client">xdb.referencedata.client</connectionStringName>
        <connectionStringName desc="xdb.referencedata.client.certificate">xdb.referencedata.client.certificate</connectionStringName>
        <connectionStringName desc="PackageManagementServiceUrl">PackageManagementServiceUrl</connectionStringName>
        <connectionStringName desc="EXM.CryptographicKey">EXM.CryptographicKey</connectionStringName>
        <connectionStringName desc="EXM.AuthenticationKey">EXM.AuthenticationKey</connectionStringName>
      </exclude>
    </heartbeatConfiguration>
  </sitecore>
</configuration>